[include]
   path = .gitconfig.user
[color]
   ui = true
[status]
   short = true
[alias]
   stat = status -s
   lg = "log --pretty=format:'%C(yellow)%h%C(reset) %C(blue)%an%C(reset) %C(cyan)%cr%C(reset) %s %C(green)%d%C(reset)' --graph --date-order"
   commit = commit --verbose
   ci = commit --verbose
   co = checkout
[core]
   pager = less -X
[merge]
   tool = vimdiff
[help]
	autocorrect = 1
[http]
   sslCAinfo = /etc/pki/tls/certs/ca-bundle.crt
[push]
	default = simple
[diff]
	submodule = log
[submodule]
	recurse = true
[fetch]
	recurseSubmodules = true
